<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.portfoliobalancer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:hardwareAccelerated="false">
        <activity
            android:name=".companies_activity.CompaniesPricesActivity"
            android:label="@string/title_companies">
        </activity>
        <activity
            android:name=".portfolio_settings_activity.PortfolioSettingsActivity"
            android:label="@string/title_portfolio_settings">
        </activity>
        <activity
            android:name=".portfolio_details_activity.PortfolioDetailsActivity"
            android:label="@string/title_main_activity">
        </activity>
        <activity
            android:name=".company_details_activity.CompanyDetailsActivity"
            android:label="@string/title_main_activity">
        </activity>
        <activity
            android:name=".add_company_activity.AddCompanyActivity"
            android:label="@string/title_add_companies">
        </activity>
        <activity
            android:name=".add_portfolio_activity.AddPortfolioActivity"
            android:label="@string/title_add_portfolio">
        </activity>
        <activity
            android:name=".main_activity.MainActivity"
            android:label="@string/title_main_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>