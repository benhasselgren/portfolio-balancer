<?xml version="1.0" encoding="utf-8"?>
<!-- #################################### Activity Main #################################### -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical"
    tools:context=".main_activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Portfolios List -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/portfolios_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:scrollbars="vertical" >
            </android.support.v7.widget.RecyclerView>

            <!-- Add new portfolio -->
            <Button
                android:id="@+id/add_portfolio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add portfolio" />

            <!-- Companies activity -->
            <Button
                android:id="@+id/companies_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Companies" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:itemBackground="?selectableItemBackgroundBorderless"
        android:itemHorizontalTranslationEnabled="true"
        android:layout_alignParentBottom="true"
        android:menu="@menu/bottom_nav"
        android:itemIconTint="@drawable/nav_item_color_state"
        android:itemTextColor="@drawable/nav_item_color_state"/>
</LinearLayout>